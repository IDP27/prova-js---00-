<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>

    <script>

        // Entrada de dados
let num1 = Number(prompt("Digite o primeiro número:"));
let num2 = Number(prompt("Digite o segundo número:"));

// Operações aritméticas
let resultado = num1 + num2;
console.log(` Adição: ${num1} + ${num2} = ${resultado}`);

resultado -= num2;
console.log(` Subtração: (${num1} + ${num2}) - ${num2} = ${resultado}`);

resultado *= num2;
console.log(` Multiplicação: [resultado anterior] * ${num2} = ${resultado}`);

resultado /= num2;
console.log(`Divisão: [resultado anterior] / ${num2} = ${resultado}`);

resultado %= num2;
console.log(` Resto da divisão: [resultado anterior] % ${num2} = ${resultado}`);


    </script>
    
</body>
</html>
